<div class="box">
    {% if component.header %}
        <div class="box-header">
            {{ component.header | raw }}
        </div>
    {% endif %}
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    {% for column in component.columns %}
                        {% if column == '.' %}
                            <th style="width:1%"></th>
                        {% else %}
                            <th>{{ column }}</th>
                        {% endif %}
                    {% endfor %}
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>